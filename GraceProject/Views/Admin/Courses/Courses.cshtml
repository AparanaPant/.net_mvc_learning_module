@model IEnumerable<GraceProject.Models.Course>
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<h2>Courses</h2>

@if (Model == null || !Model.Any())
{
    <p>No courses available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Credits</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseID</td>
                    <td>@(course.Title ?? "No Title")</td>
                    <td>@(course.Credits?.ToString() ?? "0")</td>
                    <td>
                        <a href="@Url.Action("ManageCourse", "Course", new { courseId = course.CourseID })" class="btn btn-primary">Manage Course</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
