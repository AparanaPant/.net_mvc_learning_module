@model IEnumerable<GraceProject.Models.Course>
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<h2 class="text-center mt-4">Courses</h2>

<div class="container-fluid">
    <div class="text-right mb-3">
        <button class="btn btn-success" data-toggle="modal" data-target="#addCourseModal">
            ➕ Add Course
        </button>
    </div>

    @if (Model == null || !Model.Any())
    {
        <p>No courses available.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Course ID</th>
                        <th>Title</th>
                        <th>Credits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseID</td>
                            <td>@(course.Title ?? "No Title")</td>
                            <td>@(course.Credits?.ToString() ?? "0")</td>
                            <td>
                                <a href="@Url.Action("ManageCourse", "Course", new { courseId = course.CourseID })" class="btn btn-primary">Manage Course</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Add Course Modal -->
<div class="modal fade" id="addCourseModal" tabindex="-1" role="dialog" aria-labelledby="addCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCourseModalLabel">Add New Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addCourseForm">
                    <div class="form-group">
                        <label for="title">Course Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="credits">Credits</label>
                        <input type="number" class="form-control" id="credits" name="credits" min="1" required>
                    </div>
                    <button type="submit" class="btn btn-success">Add Course</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Handle Add Course Form Submission
        $("#addCourseForm").submit(function (e) {
            e.preventDefault();

            var formData = {
                Title: $("#title").val(),
                Credits: $("#credits").val()
            };

            $.ajax({
                url: "@Url.Action("AddCourse", "Course")",
                type: "POST",
                data: formData,
                success: function () {
                    alert("Course added successfully!");
                    location.reload();  // Reload page to show new course
                },
                error: function () {
                    alert("Failed to add course. Please try again.");
                }
            });
        });
    });
</script>