@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">Welcome to Your Dashboard</h1>
    <p class="text-center">Here are your registered courses:</p>

    @if (ViewData["RegisteredCourses"] is List<GraceProject.Models.Course> courses && courses.Any())
    {
        <div class="row">
            @foreach (var course in courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">Credits: @course.Credits</p>
                            <p class="text-muted">Course Code: @course.CourseID</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-warning text-center">⚠ You are not registered for any courses.</p>
    }
</div>
