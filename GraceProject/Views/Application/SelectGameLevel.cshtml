@model List<GraceProject.Models.AppGameLevel>

@{
    ViewData["Title"] = "Select Game Level";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2>Select Game Level</h2>

<form asp-controller="Quiz" asp-action="SelectGameLevelPost" method="post">
    <select id="gameLevelDropdown" name="gameLevelId" style="width: 100%;" required>
        <option value="">-- Select Game Level --</option>
        @foreach (var level in Model)
        {
            <option value="@level.Id">@level.Name</option>
        }
    </select>

    <br /><br />
    <button type="submit" class="btn btn-primary">Continue to Add Quiz</button>
</form>

<!-- Select2 for searchable dropdown -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#gameLevelDropdown').select2({
            placeholder: "Search game level",
            allowClear: true
        });
    });
</script>
