@model GraceProject.Models.Course

@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">@Model?.Title</h1>
    <p class="text-center"><strong>Course ID:</strong> @Model?.CourseID</p>

    <h2>Course Actions</h2>
    <div class="list-group">
        <a href="~/Quizzes/@Model?.CourseID" class="list-group-item list-group-item-action">📖 Quizzes</a>
        <a href="~/Modules/@Model?.CourseID" class="list-group-item list-group-item-action">📚 Modules</a>
        <a href="~/Gradebook/@Model?.CourseID" class="list-group-item list-group-item-action">📊 Grade Book</a>
    </div>

    <div class="text-center mt-4">
        <form method="post" action="~/Courses/RegisterToCourse">
            <input type="hidden" name="courseId" value="@Model?.CourseID" />
            <button type="submit" class="btn btn-success">✅ Register to Course</button>
        </form>
    </div>
</div>
