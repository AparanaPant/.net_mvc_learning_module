@{
    ViewData["Title"] = "Educator Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">Welcome to Educator Dashboard</h1>

    <!-- Navigation Icons -->
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <a href="~/Educator/Courses" class="btn btn-primary btn-lg w-100 p-4">
                <i class="fa fa-book fa-2x"></i>
                <p>Manage Courses</p>
            </a>
        </div>
        <div class="col-md-4">
            <a href="~/Quiz/Index" class="btn btn-success btn-lg w-100 p-4">
                <i class="fa fa-question-circle fa-2x"></i>
                <p>Quizzes</p>
            </a>
        </div>
        <div class="col-md-4">
            <a href="~/Quiz/QuizResults" class="btn btn-warning btn-lg w-100 p-4">
                <i class="fa fa-bar-chart-o fa-2x"></i>
                <p>Grades</p>
            </a>
        </div>
    </div>

    <!-- Calendar Widget -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div id="calendar"></div>
        </div>
    </div>
</div>
