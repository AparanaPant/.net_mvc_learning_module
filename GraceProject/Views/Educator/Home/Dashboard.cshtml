@{
    ViewData["Title"] = "Educator Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">Educator Dashboard</h1>
    <p class="text-center">Welcome, Educator ID: @ViewData["UserID"]</p>

    <h2>Your Courses</h2>

    @if (ViewData["EducatorCourses"] is List<dynamic> courses && courses.Any())
    {
        <div class="row">
            @foreach (var courseData in courses)
            {
                var course = courseData.Course;
                var sessions = courseData.Sessions;

                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">Credits: @course.Credits</p>

                            <h6>Available Sessions:</h6>
                            @foreach (var session in sessions)
                            {
                                <p class="text-muted">Session ID: @session.SessionID (Starts: @session.StartDate?.ToShortDateString())</p>
                            }

                            @if (sessions is List<GraceProject.Models.Session> sessionList && sessionList.Any())
                            {
                                var firstSession = sessionList.First();
                                <button class="btn btn-success share-button"
                                        data-sessionid="@firstSession.SessionID"
                                        data-toggle="modal"
                                        data-target="#shareModal">
                                    Share Registration Link
                                </button>
                            }
                            else
                            {
                                <p class="text-danger">⚠ No active sessions for this course.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-warning text-center">⚠ You are not assigned to any courses.</p>
    }
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareModalLabel">Share Registration Link</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Copy and share the registration link:</p>
                <input type="text" id="registration-link" class="form-control" readonly>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="copyToClipboard()">Copy</button>
                <button class="btn btn-secondary" onclick="shareViaEmail()">Share via Email</button>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Handling Link Generation -->
<script>
    let currentLink = "";

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".share-button").forEach(button => {
            button.addEventListener("click", function () {
                let sessionId = this.getAttribute("data-sessionid");

                fetch(`/educator/dashboard/GenerateRegistrationLink?sessionId=${sessionId}`)
                    .then(response => response.json())
                    .then(data => {
                        currentLink = data.link;
                        document.getElementById("registration-link").value = currentLink;
                    })
                    .catch(error => console.error("Error generating link:", error));
            });
        });
    });

    function copyToClipboard() {
        let linkInput = document.getElementById("registration-link");
        linkInput.select();
        document.execCommand("copy");
        alert("Link copied to clipboard!");
    }

    function shareViaEmail() {
        let subject = encodeURIComponent("Session Registration Link");
        let body = encodeURIComponent(`Here is the session registration link: ${currentLink}`);
        window.location.href = `mailto:?subject=${subject}&body=${body}`;
    }
</script>



