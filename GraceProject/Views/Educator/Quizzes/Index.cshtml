@model GraceProject.ViewModels.QuizzesViewModel

@{
    ViewData["Title"] = "Quizzes for " + Model.Course.Title;
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">📖 Quizzes - @Model.Course.Title</h1>
    <p class="text-center"><strong>Course ID:</strong> @Model.Course.CourseID</p>

    <!-- Button to Create a New Quiz for Session -->
    <div class="text-right mb-3">
        <a href="@Url.Action("Create", "Quiz", new { sessionId = ViewData["SessionID"] ?? 0 })" class="btn btn-success">
            ➕ Create New Session Quiz
        </a>
    </div>


    <h2>📌 Default Quizzes</h2>
    @if (Model.DefaultQuizzes.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model.DefaultQuizzes)
                {
                    <tr>
                        <td>@quiz.Title</td>
                        <td>@quiz.Duration minutes</td>
                        <td>@quiz.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="~/Quiz/Details/@quiz.QuizId" class="btn btn-info">🔍 View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-warning">⚠ No default quizzes available for this course.</p>
    }

    <h2>🎯 Session Quizzes</h2>
    @if (Model.SessionQuizzes.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model.SessionQuizzes)
                {
                    <tr>
                        <td>@quiz.Title</td>
                        <td>@quiz.Duration minutes</td>
                        <td>@quiz.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="~/Quiz/Details/@quiz.QuizId" class="btn btn-info">🔍 View</a>
                            <a href="~/Quiz/Edit/@quiz.QuizId" class="btn btn-warning">✏ Edit</a>
                            <a href="@Url.Action("Edit", "Quiz", new { id = quiz.QuizId, userType = "educator" })" class="btn btn-secondary">✏ Edit</a>
                            <form method="post" action="~/Quiz/Delete" class="d-inline">
                                <input type="hidden" name="quizId" value="@quiz.QuizId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this quiz?');">🗑 Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-warning">⚠ No session quizzes available.</p>
    }
</div>
