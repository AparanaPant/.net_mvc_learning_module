@model GraceProject.ViewModels.QuizViewModel

@{
    ViewData["Title"] = "Quiz Details";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2>Quiz Details</h2>

<form>
    <div class="form-group">
        <label class="control-label">Title</label>
        <input value="@Model.Title" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="control-label">Duration (in minutes)</label>
        <input value="@Model.Duration" class="form-control" type="number" readonly />
    </div>

    <h3>Questions</h3>
    <div id="questions-container">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="card mb-3 question-card" data-index="@i">
                <div class="card-header">
                    <h5 class="mb-0 d-flex justify-content-between align-items-center">
                        Question @(i + 1): @(Model.Questions[i].Text ?? "undefined")
                    </h5>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label class="control-label">Question Type</label>
                        <input value="@Model.Questions[i].Type" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Points</label>
                        <input value="@Model.Questions[i].Points" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Question Text</label>
                        <textarea class="form-control" rows="3" readonly>@Model.Questions[i].Text</textarea>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Questions[i].ImageUrl))
                    {
                        <div class="form-group">
                            <label class="control-label">Question Image</label>
                            <div>
                                <img src="@Model.Questions[i].ImageUrl" alt="Question Image" class="img-fluid mb-2" style="max-width: 300px;" />
                            </div>
                        </div>
                    }

                    @if (Model.Questions[i].Type == "Multiple Choice")
                    {
                        <h5>Options</h5>
                        <ul class="list-group">
                            @foreach (var option in Model.Questions[i].Options)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center
                                    @(option.IsCorrect ? "list-group-item-success" : "")">
                                    @option.Text
                                    @if (option.IsCorrect)
                                    {
                                        <span class="badge badge-success">✅ Correct</span>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else if (Model.Questions[i].Type == "Fill in the Blank")
                    {
                        <h5>Answers</h5>
                        <ul class="list-group">
                            @foreach (var answer in Model.Questions[i].FillInTheBlankAnswers)
                            {
                                <li class="list-group-item list-group-item-info">
                                    @answer
                                </li>
                            }
                        </ul>
                    }
                    else if (Model.Questions[i].Type == "True/False")
                    {
                        <h5>Options</h5>
                        <ul class="list-group">
                            <li class="list-group-item @(Model.Questions[i].Options[0].IsCorrect ? "list-group-item-success" : "")">
                                True @if (Model.Questions[i].Options[0].IsCorrect)
                                {
                                    <span class="badge badge-success">✅</span>
                                }
                            </li>
                            <li class="list-group-item @(Model.Questions[i].Options[1].IsCorrect ? "list-group-item-success" : "")">
                                False @if (Model.Questions[i].Options[1].IsCorrect)
                                {
                                    <span class="badge badge-success">✅</span>
                                }
                            </li>
                        </ul>
                    }
                </div>
            </div>
        }
    </div>
</form>

<style>
    .question-card {
        border-radius: 8px;
    }

    .list-group-item-success {
        background-color: #d4edda;
        color: #155724;
    }

    .list-group-item-info {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>
