@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container-fluid mt-5">
    <!-- Welcome Message with Extra Space Below -->
    <h1 class="display-5 text-center fw-bold text-primary mb-5">👋 Welcome, Student!</h1>

    <div class="row">
        <!-- Left Column: Navigation Buttons -->
        <div class="col-md-3 d-flex flex-column align-items-start">
            <a href="~/Student/Courses" class="btn btn-primary shadow-sm text-white d-flex flex-column align-items-center justify-content-center rounded p-3 mb-3"
               style="width: 100%; height: 120px;">
                <i class="fa fa-book fa-2x"></i>
                <small class="mt-2 fw-bold">Student Courses</small>
            </a>

            <a href="~/Student/Profile/Profile" class="btn btn-success shadow-sm text-white d-flex flex-column align-items-center justify-content-center rounded p-3"
               style="width: 100%; height: 120px;">
                <i class="fa fa-user fa-2x"></i>
                <small class="mt-2 fw-bold">Profile</small>
            </a>
        </div>

        <!-- Right Column: Calendar -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-center fw-bold">📅 Calendar</div>
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap & FullCalendar -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        if (calendarEl) {
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 350, // Smaller Calendar
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                }
            });
            calendar.render();
        }
    });
</script>
